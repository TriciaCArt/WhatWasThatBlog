@using WhatWasThatBlog.Enums
@using WhatWasThatBlog.Services.Interfaces

@model WhatWasThatBlog.Models.BlogPost

@inject IImageService ImageService

@{
    ViewData["Title"] = "Edit";
}
<div class="row">
    <div class="col-md-8 offset-2 text-center">
        <h1>Edit</h1>

        <h4>BlogPost</h4>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-8 offset-2 text-center">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Updated" />
            <input type="hidden" asp-for="ImageType" />
            <input type="hidden" asp-for="ImageData" />

            <div class="form-group m-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="Abstract" class="control-label"></label>
                <textarea asp-for="Abstract" class="form-control" rows=5></textarea>
                <span asp-validation-for="Abstract" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="Body" class="control-label"></label>
                <div id="quillEditor">@Html.Raw(Model.Body)</div>
                <span asp-validation-for="Body" class="text-danger"></span>
                <input type="hidden" asp-for="Body" />
            </div>

            <div class="form-group m-3">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" name="Imagefile" type="file" class="form-control" accept=".jpg,.png,.gif"
                       onchange="document.getElementById('ImageFile').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="ImageData" class="text-danger"></span>
            
                @if (Model.ImageData != null)
                {
                    <img id="Imagefile" class="img-fluid img-thumbnail mt-2" style="width:120px;height:120px" src="@ImageService.ConvertByteArrayToFile(Model.ImageData, Model.ImageType)">
                }
                else
                {
                    <img id="ImageFile" class="img-fluid img-thumbnail mt-2" style="width:120px;height:120px" src="https://cdn.icon-icons.com/icons2/233/PNG/512/Contacts_26253.png">
                }
            </div>            
                       
            <div class="form-group m-3">
                <label asp-for="BlogPostState" class="form-control"></label>
                <select asp-for="BlogPostState" class="Form-Control" asp-items="@Html.GetEnumSelectList<BlogPostState>()"></select>
                @*ViewBag.BlogPostState*@
                <span asp-validation-for="BlogPostState" class="text-danger"></span>
            </div>
             <div class="form-group m-3">
                    <label asp-for="Tags" class="control-label"></label>
                    <select name="TagIds" class="form-control" asp-items="ViewBag.TagIds" multiple></select>

                </div>

            <div class="form-group m-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

<script>
    document.querySelectorAll("form").addEventListener("submit", function() {document.getElementById("Body").value = quill.container.firstChild.innerHTML;})
</script>
}